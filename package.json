{
  "name": "smart-icons",
  "version": "1.0.0",
  "description": "A smart icon component that works with both React web and React Native",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "react": "./dist/react/index.js",
      "react-native": "./dist/react-native/index.js",
      "default": "./dist/react/index.js"
    },
    "./react": {
      "types": "./dist/react/index.d.ts",
      "default": "./dist/react/index.js"
    },
    "./react-native": {
      "types": "./dist/react-native/index.d.ts",
      "default": "./dist/react-native/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run build:react && npm run build:react-native",
    "build:react": "tsc -p tsconfig.react.json",
    "build:react-native": "tsc -p tsconfig.react-native.json",
    "test": "jest",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react-native": {
      "optional": true
    },
    "react-native-svg": {
      "optional": true
    }
  },
  "dependencies": {
    "lucide-react": "^0.473.0",
    "lucide-react-native": "^0.542.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^30.0.0",
    "@types/react": "^18.0.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^30.1.2",
    "react-icons": "^5.5.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "react",
    "react-native",
    "icons",
    "lucide",
    "smart-icons"
  ],
  "author": "",
  "license": "MIT"
}
